<!DOCTYPE html>
<html>
  <head>
    <title>{{strings.site_title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{#if minifyAssets}}
      <link href="/css/main.min.css" rel="stylesheet" media="screen">
      <script src="/js/vendor/modernizr.min.js"></script>
    {{else}}
      <link href="/css/main.less" rel="stylesheet/less" media="screen">
      <script src="/js/vendor/less.js"></script>
      <script src="/js/vendor/modernizr.js"></script>
    {{/if}}
  </head>
  <body>
    <div class="container">
      <div class="wrapper">
        <div class="header">
          <ul class="nav nav-pills pull-right">
            <li class="active"><a href="#">{{strings.link_home}}</a></li>
            <li><a href="/about">{{strings.link_about}}</a></li>
            <li><a href="mailto:kdavis@gilt.com?Subject={{strings.site_title}}">{{strings.link_contact}}</a></li>
          </ul>
          <h3 class="text-muted">{{strings.site_title}}</h3>
        </div>

        {{{body}}}

      </div>

      <div class="footer">
        <p>{{{strings.site_copyright}}}</p>
      </div>

    </div>

    <script>
      require = {
        baseUrl: '/js'
      };
    </script>
    {{#if minifyAssets}}
      <script src="/js/main.min.js"></script>
    {{else}}
      <script src="/js/vendor/require.js"></script>
      <script src="/js/vendor/jquery.js"></script>
      <script src="/js/vendor/bootstrap.js"></script>
    {{/if}}
    <script type="text/javascript">
      require(['app'], function (app) {
        app.init({{{config}}});
      });
    </script>
  </body>
</html>
